<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModel"
            type="com.pulse.brag.pojo.datas.CategoryListResponseData" />

    </data>

    <RelativeLayout
        android:id="@+id/base_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground">

        <com.pulse.brag.views.SquareImageView
            android:id="@+id/imageview_category"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            bind:imageUrl="@{viewModel.url}" />

        <TextView
            android:id="@+id/textview_collection_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/semi_transparent"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:padding="5dp"
            android:tag="@string/font_opensans_regular_id"
            android:text="@{viewModel.optionName}"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_very_small" />
    </RelativeLayout>
</layout>