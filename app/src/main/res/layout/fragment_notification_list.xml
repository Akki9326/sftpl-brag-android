<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.ragtagger.brag.ui.notification.NotificationListViewModel" />
    </data>

    <LinearLayout
        android:id="@+id/base_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <!--Main screen-->
        <LinearLayout
            android:id="@+id/linear_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="@{viewModel.noInternet ? View.GONE : View.VISIBLE}">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="@{viewModel.noResult ? View.GONE : View.VISIBLE}">

                <TextView
                    android:id="@+id/textview_read"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="@{viewModel.onReadClick()}"
                    android:padding="10dp"
                    android:text="@string/label_notification_read"
                    android:visibility="gone" />

                <com.ragtagger.brag.views.erecyclerview.ERecyclerView
                    android:id="@+id/recycleview_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!--No list-->
            <include
                android:id="@+id/layout_result"
                layout="@layout/layout_result_no_data"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="@{viewModel.noResult ? View.VISIBLE : View.GONE}" />
        </LinearLayout>

        <!--No internet screen-->
        <LinearLayout
            android:id="@+id/linear_no_internet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="@{viewModel.noInternet ? View.VISIBLE : View.GONE}">

            <include
                android:id="@+id/layout_no_internet"
                layout="@layout/layout_no_internet"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>


    </LinearLayout>
</layout>